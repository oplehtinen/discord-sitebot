<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/main.css" />
    <title>{{ title }}</title>
  </head>
  <body class="{{ bodyClass }}" >
    <div class="container">
      <header>
        <ul class="nav">
          <li>
            <a href="/">home<small>where the heart is</small></a>
          </li>
          <li>
            <a href="/about">about<small>all about this</small></a>
          </li>
        </ul>
        <h1>{{ title }}</h1>
        {%- if subtitle %}<p class="subtitle">{{ subtitle }}</p>{% endif %}
      </header>
      {{ content | safe }}
        <ul class="listing">
         {%- for page in collections.post -%}
          <li>
          <a href="{{ page.url }}">{{ page.data.title }}</a> -
          <time datetime="{{ page.date }}">{{ page.date | dateDisplay }}</time>
          </li>
          {%- endfor -%}
       </ul>
      {% include "footer.njk" %}
    </div>
  </body>
</html>



